<h1>Add a setup</h1>

<% if @setup.errors.any? %> 
  <h2>The following errors prevented the article from being saved</h2> 
  <ul> 
    <% @setup.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %> 
  </ul>
<% end %>

<%= form_with scope: :setup, url: setups_path, local: true do |f| %>
<p>
    <%= f.label :car%><br/>
    <%= f.text_field :car %>
</p>

<p>
    <%= f.label :driver%><br/>
    <%= f.text_field :driver %>
</p>

<p>
    <%= f.label :track %><br/>
    <%= f.text_area :track %>
</p>

<p>
<%= f.submit %>
</p>
<p><%= link_to 'Cancel and return to setup listing', setups_path %></p>
<% end %>